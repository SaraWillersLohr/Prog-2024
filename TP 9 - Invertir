#include<bits/stdc++.h>
using namespace std;

string InvertirPalabra(int I, int F, string frase);

int main(){
	int I;
    int F = -1;
    string frase;
    cout << "Ingrese una frase" << endl;
    getline(cin, frase);
	cout<<"ingrese un inicio: "<<endl;
    cin>>I;
    cout << "ingrese un fin: " << endl;
    cin>>F;
    
    
	cout<<InvertirPalabra(I, F, frase)<<endl;
	return 0;
}
string InvertirPalabra(int I, int F, string frase){
int i;
int aux;

for(int i = 0; i <= (F - I) / 2; i++){
         aux = frase[I + i];
        frase[I + i] = frase[F - i];
        frase[F - i] = aux;
    }
return frase;
}
