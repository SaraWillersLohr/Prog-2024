        #include <bits/stdc++.h> 
        using namespace std;
        
            int ContarLetraA(string f); 
            
            int main()
            {
                string frase;
            cout<<"ingrese una frase"<<endl;
            getline(cin, frase);
            cout<<"Cantidad de letra A:"<<ContarLetraA(frase)<<endl;
            
            }
     int ContarLetraA(string f){
         int n=0;
         for(int i=0; i<f.size();i++){
             if (f[i]=='a'||f[i]=='A'){
                 n++;
             }
            
         }
         return n;
     }
